---
const { title } = Astro.props as { title: string };
---

<html lang="es">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/DBHub_library/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
    
		<!-- Estilos locales -->
		<link rel="stylesheet" href="/DBHub_library/style/base.css" /> <!-- Ajusta la ruta a public/style/base.css si es necesario -->

		<!-- Flowbite CSS -->
		<link href="https://cdn.jsdelivr.net/npm/flowbite@2.5.1/dist/flowbite.min.css" rel="stylesheet" />

		<title>{title}</title>
	</head>
	<body>
		<slot />

		<!-- Flowbite JS -->
		<script src="https://cdn.jsdelivr.net/npm/flowbite@2.5.1/dist/flowbite.min.js" defer></script>
	</body>
</html>
